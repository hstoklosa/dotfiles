{
  "$help": "https://aka.ms/terminal-documentation",
  "$schema": "https://aka.ms/terminal-profiles-schema",
  "actions": [
    {
      "keys": "ctrl+c",
      "command": {
        "action": "copy",
        "singleLine": false
      }
    },
    {
      "keys": "ctrl+v",
      "command": "paste"
    },
    {
      "keys": "ctrl+shift+f",
      "command": "find"
    },
    {
      "keys": "alt+shift+d",
      "command": {
        "action": "splitPane",
        "split": "auto",
        "splitMode": "duplicate"
      }
    },
    {
      "keys": "ctrl+backspace",
      "command": {
        "action": "sendInput",
        "input": "\u0017"
      }
    }
  ]
}
